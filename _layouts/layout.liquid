<!DOCTYPE html> 
<html> 
  <head> 
  <title>EHHapp - {{ page.name }}</title> 
  <meta name="viewport" content="width=device-width, initial-scale=1" /> 
  <link rel="apple-touch-icon-precomposed" href="/images/ehhapp.png" />
  <meta name="apple-mobile-web-app-capable" content="yes" /> 
  <meta name="apple-mobile-web-app-status-bar-style" content="black" /> 
  <link rel="stylesheet" href="/css/jquery.mobile-1.2.0.min.css" />
  <link rel="stylesheet" href="/css/app.css" />
  <link rel="stylesheet" href="/css/add2home.css">
  <script src="/js/jquery-1.8.2.min.js"></script>
  <script src="/js/jquery.mobile-1.2.0.min.js"></script>
  <script src="/js/app.js"></script>
  <script src="/js/add2home.js"></script>
</head> 
<body> 

<div data-role="page" data-dom-cache="true">

  <div data-role="footer" data-id="nav" data-position="fixed">
    <div data-role="navbar">
      <ul>
        <li>
          <a href="/FAQ" data-icon="info" data-prefetch
            {% if page.name == 'FAQ' %}class="ui-state-persist ui-btn-active"{% endif %}>FAQ</a>
        </li>
        <li>
          <a href="/phone" data-icon="phone" data-prefetch
            {% if page.name == 'phone' %}class="ui-state-persist ui-btn-active"{% endif %}>Contact</a>
        </li>
        <li>
          <a href="/index" data-icon="fahome" data-iconpos="notext" data-prefetch
            {% if page.name == 'index' %}class="ui-state-persist ui-btn-active"{% endif %}>Home</a>
        </li>
        <li>
          <a href="/Formulary" data-icon="faplus" data-prefetch
            {% if page.name == 'Formulary' %}class="ui-state-persist ui-btn-active"{% endif %}>Rx</a>
        </li>
        <li>
          <a href="/documents" data-icon="file" data-prefetch
            {% if page.name == 'documents' %}class="ui-state-persist ui-btn-active"{% endif %}>Docs</a>
        </li>
      </ul>
    </div><!-- /navbar -->
  </div>

  {{ content }}

</div><!-- /page -->
  
</body>
</html>