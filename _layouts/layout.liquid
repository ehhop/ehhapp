<!DOCTYPE html> 
<html> 
  <head> 
  <title>{{ title }}</title> 
  <meta name="viewport" content="width=device-width, initial-scale=1" /> 
  <link rel="apple-touch-icon-precomposed" href="{{ touch_icon }}" />
  <meta name="apple-mobile-web-app-capable" content="yes" /> 
  <meta name="apple-mobile-web-app-status-bar-style" content="black" /> 
  <link rel="stylesheet" href="/css/jquery.mobile-1.2.0.ehhapp.min.css" />
  <link rel="stylesheet" href="/css/jquery.mobile-1.2.0.structure.min.css" />
  <link rel="stylesheet" href="/css/app.css" />
  <link rel="stylesheet" href="/css/add2home.css">
  <script src="/js/jquery-1.8.2.min.js"></script>
  <script src="/js/jquery.mobile-1.2.0.min.js"></script>
  <script src="/js/app.js"></script>
  <script src="/js/add2home.js"></script>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '{{ google_analytics }}', 'auto');
    ga('send', 'pageview');
  </script>
</head> 
<body> 

<div data-role="page" data-current-username="{{ email }}"
  {% unless nocache %}data-dom-cache="true"{% endunless %}
  {% if page_class and page_class != '' %}class="{{ page_class }}"{% endif %}>

  <div data-role="footer" data-id="nav" data-position="fixed">
    <div data-role="navbar">
      <ul>
        {% for f in footer_links %}
        <li>
          <a href="/{{ f.page | escape }}" data-icon="{{ f.icon | escape }}" data-prefetch
            {% if page.name == f.page %}class="ui-state-persist ui-btn-active"{% endif %}>{{ f.title | escape }}</a>
        </li>
        {% endfor %}
      </ul>
    </div><!-- /navbar -->
  </div>

  {{ content }}

</div><!-- /page -->
  
</body>
</html>
